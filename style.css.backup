  }

  .nav-menu {
    top: 55px;
  }

  .nav-item {
    padding: clamp(1.3rem, 3.5vh, 1.6rem) 0.6rem;
  }

  .nav-link {
    font-size: clamp(1.05rem, 4.5vw, 1.2rem);
    font-weight: 600;
    letter-spacing: 0.5px;
  }

  .nav-link::after {
    bottom: -8px;
  }

  .github-link {
    font-size: clamp(0.95rem, 4vw, 1.1rem);
    padding: clamp(7px, 1.5vh, 10px) clamp(12px, 2.5vw, 16px);
    margin: 0.5rem 0;
  }

  .bar {
    width: clamp(20px, 5.5vw, 23px);
    height: clamp(2px, 0.5vw, 2.5px);
    margin: clamp(4px, 1.2vw, 5px) auto;
  }

  h1 {
    font-size: clamp(1.2rem, 5.5vw, 1.5rem);
    margin-bottom: 8px;
  }

  h2 {
    font-size: clamp(1rem, 4.5vw, 1.3rem);
  }

  h3 {
    font-size: clamp(0.85rem, 4vw, 1rem);
  }

  .tagline {
    font-size: clamp(0.9rem, 3.5vw, 1.05rem);
    margin-top: 8px;
  }

  .contact {
    font-size: clamp(0.75rem, 2.8vw, 0.85rem);
    margin-top: 8px;
  }

  .profile-wrapper {
    width: clamp(120px, 35vw, 160px);
    height: clamp(120px, 35vw, 160px);
    padding: 3px;
    margin-bottom: 25px;
  }

  .profile-overlay {
    top: 3px;
    left: 3px;
    right: 3px;
    bottom: 3px;
  }

  .hero {
    padding: clamp(60px, 12vw, 80px) 12px 40px;
    margin-top: 55px;
  }

  .preloader-text {
    font-size: clamp(1.2rem, 6vw, 1.8rem);
    letter-spacing: clamp(1px, 1vw, 2px);
  }

  .loading-text {
    font-size: clamp(0.7rem, 2.5vw, 0.85rem);
    letter-spacing: clamp(1.5px, 2vw, 2.5px);
  }

  .section {
    padding: 30px 0;
  }

  .container {
    padding: 20px 10px;
  }

  .project,
  .experience li,
  .certifications li,
  .awards li,
  .testimonials p {
    padding: clamp(10px, 2.5vw, 15px);
    margin-bottom: 12px;
