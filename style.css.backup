    font-size: clamp(0.9rem, 4.5vw, 1.1rem);
  }

  .nav-menu {
    top: 50px;
  }

  .nav-item {
    padding: clamp(1.2rem, 3vh, 1.4rem) 0.5rem;
  }

  .nav-link {
    font-size: clamp(1rem, 4.5vw, 1.1rem);
  }

  .bar {
    width: clamp(19px, 5.5vw, 22px);
