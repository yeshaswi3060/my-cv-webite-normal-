/* 
  Premium Dark Portfolio Theme 
  Author: Yeshaswi Singh
*/

:root {
  /* Colors */
  --bg-body: #0a0a0a;
  --bg-surface: #111111;
  --bg-surface-hover: #161616;

  --text-primary: #ffffff;
  --text-secondary: #a1a1aa;
  --text-tertiary: #52525b;

  --accent-primary: #6366f1;
  /* Indigo 500 */
  --accent-secondary: #818cf8;
  /* Indigo 400 */
  --accent-glow: rgba(99, 102, 241, 0.15);

  --border-color: #27272a;

  /* Typography */
  --font-main: 'Inter', sans-serif;
  --font-display: 'Outfit', sans-serif;

  /* Spacing */
  --container-width: 1100px;
  --header-height: 80px;

  /* Transitions */
  --transition-fast: 0.2s ease;
  --transition-smooth: 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

/* Reset & Base */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  background-color: var(--bg-body);
  color: var(--text-primary);
  font-family: var(--font-main);
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  overflow-x: hidden;
}

a {
  text-decoration: none;
  color: inherit;
  transition: var(--transition-fast);
}

ul {
  list-style: none;
}

img {
  max-width: 100%;
  display: block;
}

/* Utilities */
.container {
  max-width: var(--container-width);
  margin: 0 auto;
  padding: 0 24px;
}

.section {
  padding: 100px 0;
}

.section-header {
  margin-bottom: 60px;
}

.section-title {
  font-family: var(--font-display);
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 16px;
  background: linear-gradient(to right, #fff, #a1a1aa);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  display: inline-block;
}

.section-line {
  width: 60px;
  height: 4px;
  background: var(--accent-primary);
  border-radius: 2px;
}

/* Preloader */
.preloader {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--bg-body);
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: opacity 0.5s ease, visibility 0.5s ease;
}

.preloader.fade-out {
  opacity: 0;
  visibility: hidden;
}

.loader-line {
  width: 150px;
  height: 2px;
  background: var(--border-color);
  position: relative;
  overflow: hidden;
  border-radius: 4px;
}

.loader-line::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 40%;
  height: 100%;
  background: var(--accent-primary);
  animation: load 1.5s infinite ease-in-out;
}

@keyframes load {
  0% {
    left: -40%;
  }

  50% {
    left: 60%;
    width: 60%;
  }

  100% {
    left: 100%;
    width: 10%;
  }
}

/* Navbar */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: var(--header-height);
  background: rgba(10, 10, 10, 0.8);
  backdrop-filter: blur(12px);
  z-index: 1000;
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.nav-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
}

.nav-logo {
  font-family: var(--font-display);
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text-primary);
  letter-spacing: -0.5px;
}

.nav-menu {
  display: flex;
  gap: 32px;
}

.nav-link {
  font-size: 0.95rem;
  color: var(--text-secondary);
  font-weight: 500;
}

.nav-link:hover,
.nav-link.active {
  color: var(--text-primary);
}

.nav-actions {
  display: flex;
  align-items: center;
  gap: 20px;
}

.btn-icon {
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon:hover {
  color: var(--accent-primary);
}

.hamburger {
  display: none;
  flex-direction: column;
  gap: 6px;
  cursor: pointer;
}

.bar {
  width: 24px;
  height: 2px;
  background-color: var(--text-primary);
  transition: var(--transition-fast);
}

/* Hero Section */
.hero {
  height: 100vh;
  min-height: 700px;
  display: flex;
  align-items: center;
  padding-top: var(--header-height);
  position: relative;
}

.hero-container {
  display: grid;
  grid-template-columns: 1.2fr 0.8fr;
  align-items: center;
  gap: 40px;
}

.hero-greeting {
  font-family: var(--font-display);
  color: var(--accent-primary);
  font-weight: 600;
  margin-bottom: 16px;
  display: block;
  opacity: 0;
  animation: fadeUp 0.6s ease forwards 0.5s;
}

.hero-title {
  font-family: var(--font-display);
  font-size: clamp(3rem, 5vw, 4.5rem);
  font-weight: 700;
  line-height: 1.1;
  margin-bottom: 16px;
  letter-spacing: -1px;
  opacity: 0;
  animation: fadeUp 0.6s ease forwards 0.7s;
}

.hero-subtitle {
  font-size: 1.5rem;
  color: var(--text-secondary);
  margin-bottom: 24px;
  font-weight: 400;
  opacity: 0;
  animation: fadeUp 0.6s ease forwards 0.9s;
}

.hero-description {
  font-size: 1.1rem;
  color: var(--text-secondary);
  max-width: 500px;
  margin-bottom: 40px;
  opacity: 0;
  animation: fadeUp 0.6s ease forwards 1.1s;
}

.hero-buttons {
  display: flex;
  gap: 16px;
  opacity: 0;
  animation: fadeUp 0.6s ease forwards 1.3s;
}

.btn {
  padding: 14px 28px;
  border-radius: 6px;
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
  transition: var(--transition-smooth);
}

.btn-primary {
  background-color: var(--accent-primary);
  color: #fff;
  border: 1px solid var(--accent-primary);
}

.btn-primary:hover {
  background-color: var(--accent-secondary);
  border-color: var(--accent-secondary);
  transform: translateY(-2px);
  box-shadow: 0 4px 20px var(--accent-glow);
}

.btn-outline {
  background: transparent;
  color: var(--text-primary);
  border: 1px solid var(--border-color);
}

.btn-outline:hover {
  border-color: var(--text-primary);
  background: rgba(255, 255, 255, 0.05);
}

.hero-visual {
  display: flex;
  justify-content: center;
  opacity: 0;
  animation: fadeIn 1s ease forwards 1s;
}

.profile-frame {
  position: relative;
  width: 350px;
  height: 350px;
  border-radius: 20px;
  overflow: hidden;
  border: 1px solid var(--border-color);
  background: var(--bg-surface);
}

.profile-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: grayscale(100%);
  transition: var(--transition-smooth);
}

.profile-frame:hover .profile-img {
  filter: grayscale(0%);
  transform: scale(1.05);
}

/* About Section */
.about-content {
  max-width: 800px;
}

.about-content p {
  font-size: 1.1rem;
  color: var(--text-secondary);
  margin-bottom: 24px;
}

.about-content strong {
  color: var(--text-primary);
  font-weight: 600;
}

/* Skills Section */
.skills-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 30px;
}

.skill-category {
  background: var(--bg-surface);
  padding: 30px;
  border-radius: 12px;
  border: 1px solid var(--border-color);
  transition: var(--transition-smooth);
}

.skill-category:hover {
  border-color: var(--accent-primary);
  transform: translateY(-5px);
}

.skill-category h3 {
  font-family: var(--font-display);
  font-size: 1.25rem;
  margin-bottom: 20px;
  color: var(--text-primary);
}

.skill-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.skill-tags span {
  background: rgba(255, 255, 255, 0.05);
  color: var(--text-secondary);
  padding: 8px 16px;
  border-radius: 100px;
  font-size: 0.9rem;
  font-weight: 500;
  transition: var(--transition-fast);
}

.skill-category:hover .skill-tags span {
  background: rgba(99, 102, 241, 0.1);
  color: var(--accent-secondary);
}

/* Experience Section */
.timeline {
  position: relative;
  max-width: 800px;
  border-left: 2px solid var(--border-color);
  margin-left: 20px;
  padding-left: 40px;
}

.timeline-item {
  margin-bottom: 50px;
  position: relative;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: -49px;
  top: 5px;
  width: 16px;
  height: 16px;
  background: var(--bg-body);
  border: 2px solid var(--accent-primary);
  border-radius: 50%;
  z-index: 1;
}

.timeline-date {
  font-size: 0.9rem;
  color: var(--accent-secondary);
  font-weight: 600;
  margin-bottom: 8px;
}

.timeline-content h3 {
  font-size: 1.25rem;
  color: var(--text-primary);
  margin-bottom: 4px;
}

.company {
  display: block;
  font-size: 1rem;
  color: var(--text-secondary);
  margin-bottom: 12px;
  font-style: italic;
}

.timeline-content p {
  color: var(--text-tertiary);
  font-size: 0.95rem;
}

/* Projects Section */
.projects-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 30px;
}

.project-card {
  background: var(--bg-surface);
  border: 1px solid var(--border-color);
  border-radius: 12px;
  padding: 30px;
  transition: var(--transition-smooth);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 250px;
}

.project-card:hover {
  border-color: var(--accent-primary);
  transform: translateY(-5px);
  box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.5);
}

.project-content h3 {
  font-family: var(--font-display);
  font-size: 1.5rem;
  margin-bottom: 12px;
  color: var(--text-primary);
}

.project-desc {
  color: var(--text-secondary);
  font-size: 1rem;
  margin-bottom: 24px;
  line-height: 1.6;
}

.project-tech {
  display: flex;
  gap: 12px;
  margin-top: auto;
}

.project-tech span {
  font-size: 0.85rem;
  color: var(--accent-secondary);
  font-weight: 500;
}

/* Contact Section */
.contact-wrapper {
  background: var(--bg-surface);
  border: 1px solid var(--border-color);
  border-radius: 20px;
  padding: 60px;
  text-align: center;
}

.contact-header {
  margin-bottom: 40px;
}

.contact-header p {
  color: var(--text-secondary);
  font-size: 1.1rem;
}

.contact-info {
  display: flex;
  flex-direction: column;
  gap: 20px;
  align-items: center;
}

.contact-link {
  font-size: 1.2rem;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px 20px;
  border-radius: 8px;
  transition: var(--transition-fast);
}

.contact-link:hover {
  background: rgba(255, 255, 255, 0.05);
}

.contact-location {
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  gap: 10px;
  margin-top: 10px;
}

/* Footer */
footer {
  padding: 40px 0;
  border-top: 1px solid var(--border-color);
  margin-top: 60px;
}

.footer-container {
  text-align: center;
  color: var(--text-tertiary);
  font-size: 0.9rem;
}

/* Animations */
@keyframes fadeUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

/* Responsive */
@media (max-width: 768px) {
  .section {
    padding: 60px 0;
  }

  .nav-menu {
    display: none;
    /* Mobile menu logic in JS */
  }

  .hamburger {
    display: flex;
  }

  .hero-container {
    grid-template-columns: 1fr;
    text-align: center;
    gap: 60px;
  }

  .hero-content {
    order: 2;
  }

  .hero-visual {
    order: 1;
  }

  .profile-frame {
    width: 250px;
    height: 250px;
    margin: 0 auto;
  }

  .hero-buttons {
    justify-content: center;
  }

  .timeline {
    border-left: none;
    padding-left: 0;
    margin-left: 0;
  }

  .timeline-item::before {
    display: none;
  }

  .contact-wrapper {
    padding: 30px;
  }
}

.scroll-text {
  font-size: 0.85rem;
  color: var(--text-secondary);
  letter-spacing: 1px;
  text-transform: uppercase;
}

.scroll-arrow {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.scroll-arrow span {
  width: 2px;
  height: 12px;
  background: var(--primary-light);
  border-radius: 1px;
  animation: scrollDown 1.5s ease-in-out infinite;
}

.scroll-arrow span:nth-child(2) {
  animation-delay: 0.2s;
}

.scroll-arrow span:nth-child(3) {
  animation-delay: 0.4s;
}

/* Animations */
@keyframes float {

  0%,
  100% {
    transform: translateY(0px);
  }

  50% {
    transform: translateY(-20px);
  }
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-30px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

@keyframes slideIn {
  from {
    width: 0;
  }

  to {
    width: clamp(80px, 20vw, 150px);
  }
}

@keyframes shimmer {

  0%,
  100% {
    opacity: 1;
  }

  50% {
    opacity: 0.5;
  }
}

@keyframes gradientFlow {
  0% {
    background-position: 0% 50%;
  }

  50% {
    background-position: 100% 50%;
  }

  100% {
    background-position: 0% 50%;
  }
}

@keyframes slideText {

  0%,
  10% {
    opacity: 0;
    transform: translateY(30px);
  }

  15%,
  85% {
    opacity: 1;
    transform: translateY(0);
  }

  90%,
  100% {
    opacity: 0;
    transform: translateY(-30px);
  }
}

@keyframes rotateBorder {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

@keyframes scrollDown {
  0% {
    opacity: 0;
    transform: translateY(-10px);
  }

  50% {
    opacity: 1;
  }

  100% {
    opacity: 0;
    transform: translateY(10px);
  }
}

.profile-pic {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
  border: 4px solid #0f0f0f;
  transition: transform 0.4s ease, filter 0.4s ease;
  filter: brightness(0.95);
}

.profile-overlay {
  position: absolute;
  top: 6px;
  left: 6px;
  right: 6px;
  bottom: 6px;
  border-radius: 50%;
  box-shadow: inset 0 0 20px rgba(34, 216, 159, 0.3);
  pointer-events: none;
}

text-align: center;
color: var(--text-secondary);
font-size: 0.9rem;
border-top: 2px solid var(--primary-color);
}

/* Button Styling */
.cta-button {
  display: inline-block;
  padding: 14px 35px;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: #0f0f0f;
  text-decoration: none;
  border-radius: 6px;
  font-weight: 700;
  font-size: 1rem;
  transition: all 0.3s ease;
  box-shadow: 0 6px 20px rgba(34, 216, 159, 0.3);
  margin-top: 20px;
  border: none;
  cursor: pointer;
}

.cta-button:hover {
  transform: translateY(-4px);
  box-shadow: 0 10px 30px rgba(34, 216, 159, 0.4);
}

/* Responsive Design */
@media (max-width: 768px) {
  .navbar {
    padding: 0.8rem 1.5rem;
    height: auto;
    min-height: 65px;
  }

  .nav-logo {
    font-size: clamp(1.1rem, 4vw, 1.3rem);
  }

  .nav-menu {
    position: fixed;
    left: -100%;
    top: 65px;
    flex-direction: column;
    background-color: #0a0a0a;
    width: 100%;
    text-align: center;
    transition: left 0.3s;
    box-shadow: 0 10px 27px rgba(0, 0, 0, 0.5);
    gap: 0;
    border-bottom: 2px solid var(--primary-color);
    max-height: 80vh;
    overflow-y: auto;
  }

  .nav-menu.active {
    left: 0;
  }

  .nav-item {
    margin: 0;
    padding: clamp(1rem, 3vh, 1.4rem) 0;
    border-bottom: 1px solid rgba(34, 216, 159, 0.1);
    width: 100%;
  }

  .nav-item:last-child {
    border-bottom: none;
  }

  .nav-link {
    font-size: clamp(1rem, 3.5vw, 1.1rem);
    font-weight: 600;
    display: block;
    padding: clamp(6px, 1vh, 10px) 0;
  }

  .github-link {
    font-size: clamp(0.9rem, 3vw, 1rem);
    padding: clamp(6px, 1vh, 10px) clamp(10px, 2vw, 16px);
    margin-top: 0.5rem;
  }

  .hamburger {
    display: flex;
    flex-direction: column;
  }

  .hero {
    padding: 100px 20px 60px;
    margin-top: 65px;
  }

  .hero-content {
    width: 100%;
  }

  .profile-wrapper {
    width: 180px;
    height: 180px;
    padding: 4px;
  }

  .profile-overlay {
    top: 4px;
    left: 4px;
    right: 4px;
    bottom: 4px;
  }

  h1 {
    font-size: 1.8rem;
  }

  h2 {
    font-size: 1.5rem;
  }

  h3 {
    font-size: 1.1rem;
  }

  .tagline {
    font-size: 1.1rem;
  }

  .contact {
    font-size: 0.9rem;
  }

  .section {
    padding: 50px 0;
  }

  .container {
    padding: 40px 15px;
  }

  .project,
  .experience li,
  .certifications li,
  .awards li,
  .testimonials p {
    padding: 18px;
    margin-bottom: 20px;
  }

  .project:hover,
  .experience li:hover,
  .certifications li:hover,
  .awards li:hover,
  .testimonials p:hover {
    transform: translateX(4px);
  }

  .cta-button {
    padding: 12px 30px;
    font-size: 0.95rem;
  }
}

@media (max-width: 600px) {
  .navbar {
    padding: 0.7rem 1rem;
    min-height: 60px;
  }

  .nav-logo {
    font-size: clamp(1rem, 4vw, 1.2rem);
  }

  .nav-menu {
    top: 60px;
  }

  .nav-item {
    padding: clamp(1.2rem, 3vh, 1.5rem) 0.8rem;
  }

  .nav-link {
    font-size: clamp(1rem, 4vw, 1.15rem);
    font-weight: 600;
  }

  .bar {
    width: clamp(22px, 5vw, 24px);
    height: clamp(2px, 0.4vw, 2.5px);
    margin: clamp(4px, 1vw, 5px) auto;
  }

  h1 {
    font-size: clamp(1.3rem, 5vw, 1.6rem);
    margin-bottom: 10px;
  }

  h2 {
    font-size: clamp(1.1rem, 4.5vw, 1.4rem);
  }

  h3 {
    font-size: clamp(0.95rem, 3.5vw, 1.1rem);
  }

  .tagline {
    font-size: clamp(0.95rem, 3vw, 1.1rem);
    margin-top: 10px;
  }

  .contact {
    font-size: clamp(0.8rem, 2.5vw, 0.9rem);
    margin-top: 10px;
  }

  .profile-wrapper {
    width: clamp(140px, 35vw, 180px);
    height: clamp(140px, 35vw, 180px);
    padding: 3px;
    margin-bottom: 30px;
  }

  .profile-overlay {
    top: 3px;
    left: 3px;
    right: 3px;
    bottom: 3px;
  }

  .hero {
    padding: clamp(70px, 15vw, 100px) 15px 50px;
  }

  .section {
    padding: 40px 0;
  }

  .container {
    padding: 30px 12px;
  }

  .project,
  .experience li,
  .certifications li,
  .awards li,
  .testimonials p {
    padding: clamp(12px, 3vw, 18px);
    margin-bottom: 15px;
  }

  .project h3 {
    font-size: clamp(0.9rem, 3vw, 1rem);
    margin-bottom: 8px;
  }

  .project p,
  .experience li,
  .certifications li,
  .awards li {
    font-size: clamp(0.8rem, 2.5vw, 0.95rem);
  }

  p,
  li {
    font-size: clamp(0.85rem, 2.5vw, 0.95rem);
    padding: 6px;
    line-height: 1.6;
  }

  .cta-button {
    padding: clamp(10px, 2vh, 12px) clamp(20px, 4vw, 30px);
    font-size: clamp(0.85rem, 2.5vw, 0.95rem);
    margin-top: 15px;
  }
}

@media (max-width: 480px) {
  .navbar {
    padding: 0.6rem 0.8rem;
    min-height: 55px;
  }

  .nav-logo {
    font-size: clamp(0.95rem, 4.5vw, 1.15rem);
