  }

  .project h3 {
    font-size: clamp(0.85rem, 3.5vw, 0.95rem);
    margin-bottom: 6px;
  }

  .project p,
  .experience li,
  .certifications li,
  .awards li {
    font-size: clamp(0.75rem, 2.8vw, 0.9rem);
  }

  p,
  li {
    font-size: clamp(0.8rem, 2.8vw, 0.9rem);
    padding: 5px;
    line-height: 1.5;
  }

  .cta-button {
    padding: clamp(8px, 1.5vh, 10px) clamp(18px, 4vw, 25px);
    font-size: clamp(0.8rem, 2.8vw, 0.9rem);
    margin-top: 12px;
  }
}

